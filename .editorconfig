root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[{*.py,*.js,*.vue,*.css,*.scss,*.html}]
indent_size = 4
indent_style = tab
max_line_length = 99

[{*.json}]
indent_size = 2 # TODO
indent_style = space
insert_final_newline = false